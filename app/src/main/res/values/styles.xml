    <!--注册、登录、重置密码界面style样式-->
    <style name="edittext_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/background_in</item>
        <item name="android:textSize">@dimen/tv_mid</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!--注册 获取验证码style-->
    <style name="edittext_code_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/background_in</item>
        <item name="android:textSize">@dimen/tv_mid</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColorHint">@color/tv_tab</item>
    </style>

    <!--日期选择器的style-->
    <!--自定义dialog背景全透明无边框theme -->
    <style name="DateDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="parentText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/tv_mid</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="parentText_style_history">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/tv_mid</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="text_style3" parent="parentText_style_history">
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="text_style4" parent="parentText_style_history">
        <item name="android:layout_marginEnd">25dp</item>
    </style>


    <!--历史轨迹按钮样式-->
    <style name="history_buttonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/tv_min</item>
    </style>

    <!--自定义SeekBar-->
    <style name="seekBar_style">
        <item name="android:progressDrawable">@mipmap/zone_line</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/thumb_image</item>
    </style>

    <style name="seekBar_style1">
        <item name="android:progressDrawable">@drawable/layer_progress</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/thumb_history</item>
    </style>

    <!--进度条-->
    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>
    <style name="TransDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WhiteDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:background">@android:color/transparent</item> -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--请求审核信息的style-->
    <style name="parent_edittext_style">
        <item name="android:background">@mipmap/ic_input</item>
        <item name="android:textSize">@dimen/tv_little</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColorHint">@color/tv_gray</item>
    </style>

    <!--基类_button style-->
    <style name="parent_buttonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_exit</item>
        <item name="android:textSize">@dimen/tv_mid</item>
    </style>

</resources>
